<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/headImageView"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:src="@drawable/head" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/headImageView"
        android:layout_marginTop="72dp" />


    <ImageView
        android:id="@+id/leftHandImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/hand" />

    <ImageView
        android:id="@+id/rightHandImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headImageView"
        android:layout_marginStart="33dp"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@id/bodyImageView"
        android:src="@drawable/hand" />

    <ImageView
        android:id="@+id/bodyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headImageView"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/leftHandImageView"
        android:src="@drawable/body" />

    <ImageView
        android:id="@+id/leftLegImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftHandImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/leg" />

    <ImageView
        android:id="@+id/rightLegImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bodyImageView"
        android:layout_marginStart="42dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@id/leftLegImageView"
        android:src="@drawable/leg" />

</RelativeLayout>
